{
	"name": "dpvr-e3s-driver",
	"version": "0.0.1",
	"description": "A (non-official) driver for the DPVR E3S VR headset.",
	"keywords": [
		"DPVR",
		"E3S",
		"VR",
		"headset"
	],
	"type": "module",
	"license": "MIT",
	"private": "true",
	"bin": {
		"dpvr-e3s-driver": "dist/main"
	},
	"repository": {
		"url": "https://github.com/davdiv/dpvr-e3s-driver"
	},
	"scripts": {
		"prepare": "npm run build",
		"ci": "npm run build && npm run lint && npm run format:check",
		"build": "vite build && tsc -p tsconfig.api.json",
		"format:check": "prettier . --list-different",
		"format:fix": "prettier . --write",
		"lint": "eslint ."
	},
	"dependencies": {
		"ahrs": "^1.3.3",
		"node-hid": "^3.2.0",
		"commander": "^14.0.2"
	},
	"devDependencies": {
		"@types/node": "^24.10.0",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.2"
	}
}
